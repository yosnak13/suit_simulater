<% provide(:title, "Select") %>
<div class="hopes">
  <div class="container">
    <h2 class="text-center">あなたが着てみたい、または持っているスーツの色をボックスの中から選択してください</h2>
      <div class="reverse">
        <div class="col-md-6 text-center">
          <%= image_tag "navy1.jpg", alt:"ネイビー", class:"navy section size" %>
          <%= image_tag "right-gray1.jpg", alt:"グレー", class:"gray section size" %>
          <%= image_tag "black1.jpg", alt:"ブラック", class:"black section size" %>
          <%= image_tag "beige1.jpg", alt:"ベージュ", class:"beige section size" %>
          <%= image_tag "check1.jpg", alt:"チェック", class:"check section size" %>
          <%= image_tag "windowp1.jpg", alt:"ウィンドウペン", class:"wp section size" %>
        </div>
        <div class="col-md-6">
          <div class="main-box">
            <div class="sub-box" id="ネイビー">
              <p>ネイビー</p>
              <div class="pattern-navy secList" id="navy">
              </div>
            </div>
            <div class="sub-box" id="グレー">
              <p>グレー</p>
              <div class="pattern-gray secList" id="gray">
              </div>
            </div>
            <div class="sub-box" id="ブラック">
              <p>ブラック</p>
              <div class="pattern secList" id="black">
              </div>
            </div>
            <div class="sub-box" id="ベージュ">
              <p>ベージュ</p>
              <div class="pattern-beige secList" id="beige">
              </div>
            </div>
            <div class="sub-box" id="チェック">
              <p>チェック</p>
              <div class="pattern-check secList" id="check">
              </div>
            </div>
            <div class="sub-box" id="ウィンドウペン">
              <p>ウィンドウペン</p>
              <div class="pattern-wp secList" id="wp">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <div class="btn_to_final">
    <%= form_with model: @hope_suits, url: {controller: 'hopes' , action: 'create' }, local: true do |f| %>
      <%= f.hidden_field :suit_color, value: "", id:"submit" %>
      <%= f.submit "これで決定！", class: "btn" %>
    <% end %>
  </div>
</div>
