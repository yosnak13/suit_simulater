<header>
  <div class="container">
    <div id="header">
      <h1 class="navber-brand"><%= link_to image_tag("logo.png"), root_path, style:"color:gray", class:"header-logo" %></h1>
      <nav>
        <ul id="navi">
          <% if logged_in? %>
            <i class="fas fa-user-tie"></i>
            <li><%= link_to "スーツから探す",  select_suit_user_url(current_user) %></li>
            <i class="fas fa-tshirt"></i>
            <li><%= link_to "シャツから探す", select_shirt_user_url(current_user) %></li>
            <i class="fab fa-black-tie"></i>
            <li><%= link_to "ネクタイから探す", select_tie_user_url(current_user) %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">マイアカウント <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "マイページ", current_user %></li>
                <li><%= link_to "アカウント情報の変更", edit_user_path(current_user) %></li>

                <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "ログイン", login_path, class:"btn", style:"color:white" %></li>
          <% end %>
        </ul>
      </nav>
        <!-- ボタン部分ここを後で追加するだけ-->
      <div class="nav_btn" id="nav_btn">
        <span class="hamburger_line hamburger_line1"></span>
        <span class="hamburger_line hamburger_line2"></span>
        <span class="hamburger_line hamburger_line3"></span>
      </div>
      <div class="nav_bg" id="nav_bg"></div>
        <!-- /ボタン部分ここを後で追加するだけ-->
    </div>
  </div>
</header>
