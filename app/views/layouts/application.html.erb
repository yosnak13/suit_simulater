<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %>| SuitSimulater</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %>
    <script src="https://kit.fontawesome.com/a7ae6c3eb4.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Kosugi+Maru&family=Montserrat&display=swap" rel="stylesheet">
  </head>
  <body>
    <%= render 'layouts/header' %>
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
    <%= yield %>
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
